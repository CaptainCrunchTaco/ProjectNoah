<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#313429"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/topgraphic" />

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#313429"
            android:text="ndomondo"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:stretchColumns="1"
        android:padding="5dp">

        <TableRow
            android:onClick="handleFacebook"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fb" />

            <TextView
                android:id="@+id/midText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up with facebook"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rightText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text=">"
                android:layout_gravity="center_vertical"
                android:textStyle="bold|normal"
                android:paddingRight="10dp" />
        </TableRow>

        <TableRow

            android:layout_height="1dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:alpha=".5">

            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </TableRow>
        <TableRow
            android:onClick="handleEmail"

            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/envelope" />

            <TextView
                android:id="@+id/midText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up with email"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rightText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text=">"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:paddingRight="10dp" />
        </TableRow>

        <TableRow
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:alpha=".5">

            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </TableRow>

        <TableRow
            android:onClick="handleAccount"

            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/midgraphic" />

            <TextView
                android:id="@+id/midText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have an account"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/rightText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:textStyle="bold"
                android:paddingRight="10dp" />
        </TableRow>

        <TableRow
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:alpha=".5">

            <Space
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </TableRow>
    </TableLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/bottomgraphic" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Remind me later"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
      />
</RelativeLayout>
